@model RasmedTestEngine.Website.Models.VerifyCodeViewModel
@{
    ViewBag.Title = "Verify";
}

<link href="~/css/pages/signin.css" rel="stylesheet" />

<div class="account-container">

    <div class="content clearfix">

        @using (Html.BeginForm("VerifyCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("provider", @Model.Provider)
            @Html.Hidden("rememberMe", @Model.RememberMe)
            <h4>Enter verification code</h4>


            <div class="login-fields">
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="fields">
                    @Html.LabelFor(m => m.Code, new {@class = ""})

                    @Html.TextBoxFor(m => m.Code, new {@class = "form-control"})

                </div>
                <div class="fields">
                    <h4>Remember this Browser</h4>
                    @Html.CheckBoxFor(m => m.RememberBrowser, new { @class = "field login-checkbox", style = "width:50px;" })


                </div>
                <br />


                <div class="login-actions">

                    <input type="submit" class="button btn btn-primary btn-large" value="Submit"/>
                </div>
                </div>
           

        }
                </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
